@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Add a tag to @Html.DisplayFor(model => model.Name)</h2>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.Label("Select tag:")
    @Html.DropDownList("TagId")
    <br><br>
    <input type="submit" value="Save" />
}

<div class="recipe-links">
  <span>@Html.ActionLink(".Back to list", "Index")</span>
</div>