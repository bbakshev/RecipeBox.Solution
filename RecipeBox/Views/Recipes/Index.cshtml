@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Recipe for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{recipe.Description}", "Details", new { id = recipe.RecipeId }) | @recipe.Tag.Title</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new recipe", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>