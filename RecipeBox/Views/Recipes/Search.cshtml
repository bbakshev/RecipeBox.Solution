@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1 class="recipe-list"></h1>

@if (@Model.Count == 0)
{
  <h3>No hits.</h3>
} 
else
{
  <h3>Search result for Recipes</h3>
    @foreach(Recipe recipe in Model)
  {
    <li>@Html.ActionLink($"{recipe.Name}", "Details", new { id = recipe.RecipeId })
    </li>
  }
}

<p>@Html.ActionLink("Add new recipe", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>