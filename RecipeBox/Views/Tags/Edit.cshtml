@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Tag

<h2>Edit @Html.DisplayFor(model => model.Title)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TagId)

  <p>@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger", @style = "font-weight: 600; color:red;" })</p>
  @Html.Label("Tag: ")
  @Html.EditorFor(model => model.Title)
  <br><br>
  <input type="submit" value="Save" id="green-button"/>
}

<div class="recipe-links">
  <span>@Html.ActionLink(".Back to list", "Index")</span>
</div>