@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<div class="recipeIndex">
  <h1 class="recipe-list">Tags</h1>

  @if (@Model.Count == 0)
  {
    <h3>No tags have been added yet!</h3>
  } 

  @foreach (Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.Title}", "Details", new { id = tag.TagId })</li>
  }

</div>
<div class="recipeLayout">
  <div class="recipe-links">
    <span>@Html.ActionLink(".Add new tag", "Create")</span>
    <span>@Html.ActionLink(".Home", "Index", "Home")</span>
  </div>
</div>